<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ync.project.admin.mapper.AGenreMapper">

	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<!--
	member_auth table은 사용 하지 않고 AuthVO만 사용한다.
	tbl_member 의 autho 컬럼 정보만 따로 담아는 객차이다.
	Spring Security의 기본 사용법과 다르게 tbl_member에 권한 컴럼(auth)을
	넣어서 사용하기에 기본 사용법과 달라진다.
	-->
	<select id="read" resultType="com.ync.project.domain.GenreVO">
		SELECT	genre_id,
				genre_name
		FROM	teamagenre
		WHERE	genre_id = #{genre_id}
	</select>
	
	
	<select id="getList" resultType="com.ync.project.domain.GenreVO">
		SELECT  genre_id,
				genre_name
		FROM    teamagenre
	</select>


	<insert id="insert">
		<![CDATA[
			INSERT	INTO	teamagenre(
								genre_id,
								genre_name
							)
							VALUES(
								#{genre_id},
								#{genre_name}
							)
		]]>
	</insert>


	<update id="update">
		<![CDATA[
			UPDATE	teamagenre
			SET		genre_name = #{genre_name},
					genre_id = #{genre_id}
			WHERE	genre_id = #{genre_id}
		]]>
	</update>

	<select id="getTotalCount" resultType="int">
		SELECT	count(*)
		FROM	teamagenre
	</select>
	
	<select id="getListWithPaging" resultType="com.ync.project.domain.GenreVO">
		<![CDATA[
			SELECT	genre_id,
					genre_name
			FROM	(SELECT /*+INDEX_DESC(teamagenre pk_board) */
						rownum rn,
        				genre_id,
						genre_name
      				FROM	teamagenre
					WHERE 
  		]]>
		<include refid="criteria"></include> 
      
		<![CDATA[    
      			rownum <= #{pageNum} * #{amount}
      			)
  			WHERE rn > (#{pageNum} -1) * #{amount}   
		]]>
	</select>
	
	<delete id="delete">
		DELETE	FROM	teamagenre
				WHERE	genre_id = #{genre_id}
	</delete>
</mapper>
